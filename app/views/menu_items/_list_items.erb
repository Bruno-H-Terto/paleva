<% if items.any? %>
  <% items.each do |item| %>
    <div>
      <p><%= link_to item.menu_item.name, restaurant_item_path(restaurant, item), class: 'text-blue-500 hover:underline' %></p>
      <% if item.photo.present? %>
        <p><%= image_tag(item.photo)%></p>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>Não existem resultados disponíveis</p>
<% end %>