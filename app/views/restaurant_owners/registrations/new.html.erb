<h2><%= t('register') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "restaurant_owners/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :individual_tax_id %><br />
    <%= f.email_field :individual_tax_id, autofocus: true, autocomplete: RestaurantOwner.human_attribute_name(:individual_tax_id) %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.email_field :name, autocomplete: RestaurantOwner.human_attribute_name(:name) %>
  </div>

    <div class="field">
    <%= f.label :surname %><br />
    <%= f.email_field :surname, autocomplete: RestaurantOwner.human_attribute_name(:surname) %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: RestaurantOwner.human_attribute_name(:email) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('characters_minimum') %>)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit t('create_account'), class: 'btn-primary' %>
  </div>
<% end %>

<%= render "restaurant_owners/shared/links" %>
