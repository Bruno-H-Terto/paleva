<%= render 'shared/errors', object: @address %>

<%= form_with model: @address, url: restaurant_address_path(@restaurant, @address), data: {turbo: false} do |form| %>
  <div>
    <%= form.label :zip_code %>
    <%= form.text_field :zip_code, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :street %>
    <%= form.text_field :street, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :number %>
    <%= form.text_field :number, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :district %>
    <%= form.text_field :district, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :city %>
    <%= form.text_field :city, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :state %>
    <%= form.text_field :state, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :complement %>
    <%= form.text_field :complement, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.submit class: 'btn-primary' %>
  </div>
<% end %>