<%= render 'shared/errors', object: @restaurant, class: 'flex items-center space-x-2' %>

<%= form_with model: @restaurant, data: {turbo: false} do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :brand_name %>
    <%= form.text_field :brand_name, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :register_number %>
    <%= form.text_field :register_number, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :comercial_phone %>
    <%= form.text_field :comercial_phone, class: 'border p-2 rounded' %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email, class: 'border p-2 rounded' %>
  </div>

  <%= form.fields_for :address do |address_form| %>
    <div>
      <%= address_form.label :zip_code %>
      <%= address_form.text_field :zip_code, class: 'border p-2 rounded' %>
    </div>

    <div>
      <%= address_form.label :street %>
      <%= address_form.text_field :street, class: 'border p-2 rounded' %>
    </div>

    <div>
      <%= address_form.label :number %>
      <%= address_form.text_field :number, class: 'border p-2 rounded' %>
    </div>

    <div>
      <%= address_form.label :district %>
      <%= address_form.text_field :district, class: 'border p-2 rounded' %>
    </div>

    <div>
      <%= address_form.label :city %>
      <%= address_form.text_field :city, class: 'border p-2 rounded' %>
    </div>

    <div>
      <%= address_form.label :state %>
      <%= address_form.text_field :state, class: 'border p-2 rounded' %>
    </div>

    <div>
      <%= address_form.label :complement %>
      <%= address_form.text_field :complement, class: 'border p-2 rounded' %>
    </div>
  <% end %>

  <div>
    <%= form.submit class: 'btn-primary' %>
  </div>
<% end %>