<%= form_with model: restaurant, data: {turbo: false} do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :brand_name %>
    <%= form.text_field :brand_name %>
  </div>

  <div>
    <%= form.label :register_number %>
    <%= form.text_field :register_number %>
  </div>

  <div>
    <%= form.label :comercial_phone %>
    <%= form.text_field :comercial_phone %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <%= form.fields_for :address do |address_form| %>
    <div>
      <%= address_form.label :zip_code %>
      <%= address_form.text_field :zip_code %>
    </div>

    <div>
      <%= address_form.label :street %>
      <%= address_form.text_field :street %>
    </div>

    <div>
      <%= address_form.label :number %>
      <%= address_form.text_field :number %>
    </div>

    <div>
      <%= address_form.label :district %>
      <%= address_form.text_field :district %>
    </div>

    <div>
      <%= address_form.label :city %>
      <%= address_form.text_field :city %>
    </div>

    <div>
      <%= address_form.label :state %>
      <%= address_form.text_field :state %>
    </div>

    <div>
      <%= address_form.label :complement %>
      <%= address_form.text_field :complement %>
    </div>
  <% end %>

  <div>
    <%= form.submit t('registration') %>
  </div>
<% end %>